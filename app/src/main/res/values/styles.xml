<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!-- The are a lot of TextViews and nested layouts,
         so it makes sense to reuse layout_height(width) -->

    <!-- custom styles -->
    <style name="Text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:onClick">onClickToast</item>
    </style>

    <style name="greyText" parent="Text">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="blackText" parent="Text">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!--The title is bigger at the task description,
        but i find it looks much better bold too-->
    <style name="title" parent="Text">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--It's not reusable, but i like it like this-->
    <style name="status" parent="Text">
        <item name="android:background">@drawable/orange_sign</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="nested_layout_positioning">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="nav_header_text">
        <item name="android:textSize">@dimen/nav_header_text_size</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
