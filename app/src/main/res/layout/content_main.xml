<?xml version="1.0" encoding="utf-8"?>
<com.yalantis.starwars.TilesFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tiles_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    app:sw_animationDuration="1500"
    app:sw_numberOfTilesX="35">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/spacer"
            android:orientation="vertical"

            android:padding="@dimen/activity_padding"
            android:showDividers="middle">

            <RelativeLayout style="@style/nested_layout_positioning">

                <TextView
                    style="@style/title"
                    android:layout_centerVertical="true"
                    android:text="Комунальне" />

                <TextView
                    style="@style/status"
                    android:layout_alignParentRight="true"
                    android:text="В роботі" />
            </RelativeLayout>

            <RelativeLayout style="@style/nested_layout_positioning">

                <TextView
                    style="@style/greyText"
                    android:text="@string/asd" />

                <TextView
                    style="@style/blackText"
                    android:layout_alignParentRight="true"
                    android:text="@string/asd" />
            </RelativeLayout>

            <RelativeLayout style="@style/nested_layout_positioning">

                <TextView
                    style="@style/greyText"
                    android:text="@string/asd" />

                <TextView
                    style="@style/blackText"
                    android:layout_alignParentRight="true"
                    android:text="@string/asd" />
            </RelativeLayout>

            <RelativeLayout style="@style/nested_layout_positioning">

                <TextView
                    style="@style/greyText"
                    android:text="@string/asd" />

                <TextView
                    style="@style/blackText"
                    android:layout_alignParentRight="true"
                    android:text="@string/asd" />
            </RelativeLayout>

            <RelativeLayout style="@style/nested_layout_positioning">

                <TextView
                    style="@style/greyText"
                    android:text="@string/asd" />

                <TextView
                    style="@style/blackText"
                    android:layout_alignParentRight="true"
                    android:text="@string/asd" />
            </RelativeLayout>


            <LinearLayout
                style="@style/nested_layout_positioning"
                android:orientation="vertical">

                <TextView
                    style="@style/blackText"
                    android:layout_marginBottom="30dp"
                    android:text="@string/asd" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="horizontal" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</com.yalantis.starwars.TilesFrameLayout>